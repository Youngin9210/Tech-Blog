<div class="container container-fluid row justify-content-between mx-auto my-3">
  <div class="col-md-5 my-3">
    <form class="login-form">
        <h4 class="text-info">Login</h4>
        <div class="form-group row">
          <label for="email-login">Email:</label>
          <input class="form-control" type="email" id="email-login">
        </div>
        <div class="form-group row">
          <label for="password-login">Password:</label>
          <input class="form-control" type="password" id="password-login">
        </div>
        <button class="btn btn-primary" type="submit">Sign In</button>
    </form>
  </div>
  <div class="col-md-5 my-3">
    <form class="signup-form">
      <h4 class="text-info">Sign Up</h4>
        <div class="form-group row">
          <label for="username-signUp">Username:</label>
          <input class="form-control" type="text" id="username-signup">
        </div>
        <div class="form-group row">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="email" id="email-signup" placeholder="user1234@email.com">
        </div>
        <div class="form-group row">
        <label for="password-signUp">Password:</label>
        <input class="form-control" type="password" id="password-signup">
        </div>
        <button class="btn btn-primary" type="submit">Sign Up</button>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
