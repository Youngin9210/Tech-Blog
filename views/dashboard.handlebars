<div class="container my-3 text-center">
  <a href="/dashboard/create" class="btn btn-primary">New Blog</a>
</div>
{{#if blogs.length}}
  <div class="container my-3" id="blogs">
  {{#each blogs as |blog|}}
    <div class="card m-3 text-center">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center border-bottom">
          <h4 class="card-title">{{blog.title}}</h4>
          <small class="text-muted">Created: {{format_date blog.date_created}}</small>
        </div>
        <p class="card-text">{{blog.blog_content}}</p>
        <a href="/api/blogs/{{blog.id}}" class="btn btn-primary">View Blog</a>
        <a href="/dashboard/update/{{blog.id}}" class="btn btn-primary">Edit</a>
        <a href="" class="btn btn-danger deleteBlog" data-id="{{blog.id}}">Delete</a>
      </div>
    </div>
  {{/each}}
  </div>

  <script src="/js/deleteBlog.js"></script>
{{else}}
  <div class="container text-center mt-3">
    <h3 class="">No blogs have been posted yet!</h3>
  </div>
{{/if}}


